<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>


<BorderPane
        fx:controller="com.zervladpy.tallerpaco.Controllers.CarTabController"
        maxHeight="-Infinity" maxWidth="-Infinity"
        minHeight="-Infinity" minWidth="-Infinity"
        prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <TableView fx:id="table" onMouseClicked="#onTableClick" prefHeight="200.0" prefWidth="800.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="idCL" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="plateCL" prefWidth="75.0" text="Matrícula" />
            <TableColumn fx:id="mileageCL" prefWidth="75.0" text="Kilometraje" />
            <TableColumn fx:id="colorCL" prefWidth="75.0" text="Color" />
            <TableColumn fx:id="brandCL" prefWidth="75.0" text="Marca" />
            <TableColumn fx:id="clientCL" prefWidth="75.0" text="Cliente" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <right>
       <VBox prefHeight="200.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="TOP_LEFT">
           <BorderPane.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
           </BorderPane.margin>
           <Label text="Matrícula:"/>
           <TextField fx:id="plateTF"/>
           <Label text="Kilometraje:"/>
           <TextField fx:id="mileageTF"/>
           <Label text="Color:"/>
           <ColorPicker fx:id="colorCP" prefWidth="200.0"/>
           <Label text="Marca:"/>
           <ComboBox fx:id="brandCB" editable="true" prefWidth="200.0"/>
           <Label text="Cliente:"/>
           <ComboBox fx:id="clientCB" editable="true" prefWidth="200.0"/>
           <Button fx:id="formBtn" maxWidth="200.0" mnemonicParsing="false" prefHeight="30.0" text="Guardar">
              <VBox.margin>
                  <Insets top="10.0"/>
              </VBox.margin>
           </Button>
       </VBox>
   </right>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="emptyBtn" onMouseClicked="#onEmptyButtonClick" mnemonicParsing="false" text="Vaciar Campos" />
          <Button fx:id="deleteBtn" onMouseClicked="#onDeleteButtonClick" mnemonicParsing="false" text="Eliminar" />
        </buttons>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets right="10.0" />
         </padding>
      </ButtonBar>
   </bottom>
</BorderPane>
