<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zervladpy.tallerpaco.Controllers.BrandTabController">
   <center>
      <HBox>
          <TableView fx:id="table" onMouseClicked="#onTableClick" prefWidth="800.0">
            <columns>
                <TableColumn fx:id="idCL" prefWidth="59.0" text="ID" />
                <TableColumn fx:id="nameCL" prefWidth="266.0" text="Nombre" />
                <TableColumn fx:id="originCL" minWidth="100.0" prefWidth="275.0" text="País de Orígen" />
                <TableColumn fx:id="yearCL" prefWidth="174.0" text="Año Creación" />
            </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
          </TableView>
          <VBox maxWidth="200.0" minWidth="200.0" prefWidth="200.0" spacing="10.0">
              <Label text="Name:" />
              <TextField fx:id="nameTF">
                  <VBox.margin>
                      <Insets />
                  </VBox.margin>
              </TextField>
              <Label text="País Origen:" />
              <TextField fx:id="originTF">
                  <VBox.margin>
                      <Insets />
                  </VBox.margin>
              </TextField>
              <Label text="Año Fabricacion:" />
              <TextField fx:id="yearTF">
                  <VBox.margin>
                      <Insets />
                  </VBox.margin>
              </TextField>
              <Button fx:id="formButton" mnemonicParsing="false" onMouseClicked="#onFormButtonClick" prefHeight="30.0" prefWidth="200.0" text="Guardar">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Button>
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
          </VBox>
      </HBox>
   </center>
   <bottom>
      <ButtonBar fx:id="buttonBar" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="emptyBtn" mnemonicParsing="false" onMouseClicked="#onEmptyButtonClick" text="Vaciar Campos" />
          <Button fx:id="deleteBtn" mnemonicParsing="false" onMouseClicked="#onDeleteButtonClick" text="Eliminar" />
        </buttons>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </ButtonBar>
   </bottom>
</BorderPane>
